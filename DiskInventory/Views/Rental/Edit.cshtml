@{
}

<h2>@ViewBag.Action a rental</h2>

<form asp-action="Edit" asp-controller="Rental" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DiskId">Disk name:</label>
        <select asp-for="DiskId" class="form-control">
            <option value="">Select a disk</option>
            @foreach (Disk d in ViewBag.Disks)
            {
                <option value="@d.DiskId">@d.DiskName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="BorrowerId">Borrower:</label>
        <select asp-for="BorrowerId" class="form-control">
            <option value="">Select your name</option>
            @foreach (Borrower b in ViewBag.Borrowers)
            {
                <option value="@b.BorrowerId">@b.FirstName @b.LastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BorrowedDate">Borrowed date:</label>
        <input asp-for="BorrowedDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReturnDate">Returned date: (optional)</label>
        <input asp-for="ReturnDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Due date:</label>
        <input asp-for="DueDate" type="date" class="form-control" />
    </div>

    <input type="hidden" asp-for="RentalId" />


    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Rental" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
