@model Artist
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string title = ViewBag.Action;
    ViewBag.Title = title;
}

<h2>@ViewBag.Action</h2>

<form asp-action="Edit" asp-controller="Artist" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName">First name:</label>
        <input asp-for="FirstName" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last name:</label>
        <input asp-for="LastName" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="ArtistTypeId">Artist Type:</label>
        <select asp-for="ArtistTypeId" class="form-control">
            <option>Select an artist type</option>
            @foreach(ArtistType t in ViewBag.ArtistTypes)
            {
                <option value="@t.ArtistTypeId">@t.Description</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="ArtistId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Artist" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>