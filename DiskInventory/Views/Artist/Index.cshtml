@model List<Artist>;
@{
    ViewData["Title"] = "Artist Page";
}
<div>
    <h1>Artist</h1>
    <a asp-controller="Artist" asp-action="Add">Add Artist</a>
    <table class="table">
        <thead>

            <tr>
                <td>ArtistId</td>
                <td>Artist Name</td>
                <td></td>
                <td>Artist Type</td>

            </tr>
        </thead>
        <tbody>
            @foreach(Artist a in Model)
            { 
                <tr>
                    <td>@a.ArtistId</td>
                    <td>@a.FirstName</td>
                    <td>@a.LastName</td>
                    <td>@(a.ArtistTypeId == 1? "Solo" : "Group")</td>
                    <td><a asp-controller="Artist" asp-action="Edit" asp-route-id="@a.ArtistId">Edit</a></td>
                    <td><a asp-controller="Artist" asp-action="Delete" asp-route-id="@a.ArtistId">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>