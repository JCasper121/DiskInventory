@{
}
@{

    ViewBag.Title = "Delete Borrower";
}

<h2>Confirm Delete</h2>
<h3>@Model.FirstName @Model.LastName</h3>
<form asp-action="Delete" asp-controller="Borrower" method="post">
    <input type="hidden" asp-for="BorrowerId" />

    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-controller="Borrower" asp-action-="Index" class="btn btn-primary">Cancel</a>
</form>